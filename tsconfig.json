{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "self://*": ["./src/*"],
      "asset://*": ["./src_assets/*"]
    },
    "lib": ["dom", "es5", "es6"]
  },
  "files": ["./globals.d.ts"],
  "include": ["src/**/*"],
  "exclude": ["dist/**/*", "node_modules/**/*"]
}
